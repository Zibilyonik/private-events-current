<h1>
  <strong>Title:</strong>
  <%= @event.title%>
</h1>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Creator:</strong>
  <%= @event.creator.name %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<% @event.attendees.each do |attendee| %>

  <div class="content">
    <strong><%= attendee.name %></strong><br />
    <small><%= attendee.email %></small><br />
  </div>

<% end %>

