                <small><%= event.date %></small><br />
                <p><%= event.creator.name %></p>
                </div>
            </div>
        </article>
    </div>  
<% end %>

<h1>Attended Events</h1>

<h3>Upcoming Events You're Attending</h3>

<% @user_attended_upcoming.each do | att_event | %>
    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64">
